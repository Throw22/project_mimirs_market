

<!-- Page Content -->
<div class="container">

  <!-- Jumbotron Header -->
  <header class="jumbotron hero-spacer">
    <form class="form-inline text-center" action="/search" method="GET">
      <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" style="width: 50%;" id="search_text" placeholder="Search" name="searchText">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <br>
    <form class="form-inline text-center" action="/filter" method="GET">
      <input type="number" name="minPrice" class="form-control mb-2 mr-sm-2 mb-sm-0" id="min_price" placeholder="Minimum Price">
      <input type="number" name="maxPrice" class="form-control mb-2 mr-sm-2 mb-sm-0" id="max_price" placeholder="Maximum Price">
      <select class="custom-select mb-2 mr-sm-2 mb-sm-0" name="product[categoryId]" id="category">
          <option selected value="">Choose Category: </option>
          {{#each categories as |category| }}
          <option value="{{ category.id }}">{{ category.name }}</option>
          {{/each }}
        </select>
      <button type="submit" class="btn btn-primary">Filter</button>
    </form>
    <br>
    <form class="form-inline text-center" action="/order" method="GET">
      <select class="custom-select mb-2 mr-sm-2 mb-sm-0" name="orderBy" id="sort_by" style="width: 50%">
        <option value="">Order By:</option>
        <option value="&quot;name&quot;">By name ascending</option>
        <option value="&quot;name&quot; DESC">By name descending</option>
        <option value="&quot;price&quot;">By price ascending</option>
        <option value="&quot;price&quot; DESC">By price ascending</option>
        <option value="&quot;createdAt&quot;">Oldest first</option>
        <option value="&quot;createdAt&quot; DESC">Newest first</option>
      </select>
      <button type="submit" class="btn btn-primary">Order</button>
    </form>
  </header>

  <hr>

  <!-- Title -->
  <div class="row">
    <div class="col-lg-12">
      <h3 class="text-center">Products</h3>
    </div>
  </div>
  <!-- /.row -->
  <br>
  <!-- Page Features -->
  <div class="row text-center">

    {{#each products as |product|}}
    <div class="col-md-3 col-sm-6 hero-feature">
      <div class="thumbnail">
        <img src="/images/{{product.photo}}" alt="">
        <div class="caption">
          <h3><a href="/products/{{product.id}}">{{product.name}}</a></h3>
          <h5>${{product.price}}</h5>
          <p>{{product.Category.name}}</p>
          {{#if (isInCart product.id ../cartProducts)}}
          <p>
            <a href="/cart" class="btn btn-success">Edit Cart</a>
          </p>
          {{else}}
          <p>
          <form action="/addToCart" method="POST">
            <input type="hidden" name="productId" value="{{product.id}}">
            <button type="submit" class="btn btn-primary">Add to Cart</button>
          </form>
        </p>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <!-- /.row -->

  <hr>

  <!-- Footer -->
  <footer>
      <div class="row">
          <div class="col-lg-12">
              <p>Copyright &copy; Mimir's Market 2017</p>
          </div>
      </div>
  </footer>

</div>
<!-- /.container -->
