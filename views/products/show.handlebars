<header class="page-header">
 <h1>Product</h1>
</header>

<div class="row">
  <div class="col-xs-3">
      <img src="/images/{{currentProduct.photo}}" height="180" width="180">
  </div>
  <div class="col-xs-3">
      <p>{{currentProduct.name}}</p>
      <p>{{currentProduct.Category.name}}</p>
      <p>{{currentProduct.price}}</p>
  </div>
  <div class="col-xs-6">
      <p>{{currentProduct.description}}</p>
      {{#if (isInCart currentProduct.id cartProducts)}}
        <form action="/cart" method="GET">
        <button type="submit" class="btn btn-success">Edit Cart</button>
        </form>
      {{else}}
        <form action="/addToCart" method="POST">
          <input type="hidden" name="productId" value="{{currentProduct.id}}">
          <button type="submit" class="btn btn-primary">Add to Cart</button>
        </form>
      {{/if}}
  </div>

</div>

<div class="row">
  <div class="col-xs-12 text-center">
    <h2>Related Products:</h2>
  </div>
</div>
<div class="clearfix"></div>
<div class="row">
 {{#each products as |product|}}
    <div class="col-xs-4 index-img">
      <img src="/images/{{product.photo}}" height="180" width="180" /><br>
      <div class="text-center">
        <form action="/addToCart" method="POST">
          <input type="hidden" name="productId" value="{{product.id}}">
          <p><a href="/products/{{product.id}}">{{product.name}}</a></p>
          <p>{{product.price}}</p>
          <p>{{../currentProduct.Category.name}}</p>
          <button type="submit" class="btn btn-primary">Add to Cart</button>
      </form>
      </div>
    </div>
  {{/each}}
</div>
<div class="clearfix"></div>
